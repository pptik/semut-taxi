<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.bsts.semut.OrderActivity"
    tools:showIn="@layout/activity_order">
    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi Pemesan : "
                    style="@style/TextAppearance.AppCompat.Title"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalan blah blah blah blah"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/text_source" />
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Navigasi Ke Lokasi Pemesan"
                    android:textColor="@color/md_blue_grey_900"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/button_to_source" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi Tujuan : "
                    style="@style/TextAppearance.AppCompat.Title"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalan blah blah blah blah"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/text_dest" />
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Navigasi ke Lokasi Tujuan"
                    android:textColor="@color/md_blue_grey_900"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/button_to_dest" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimasi Jarak Tempuh : "
                    style="@style/TextAppearance.AppCompat.Title"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.68KM"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/text_estimate" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pemesan : "
                    style="@style/TextAppearance.AppCompat.Title"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hendra Permana"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/text_nama" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp"
                    >
                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Telepon"
                        android:textColor="@color/md_blue_grey_900"
                        android:id="@+id/button_telp" />
                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="SMS"
                        android:textColor="@color/md_blue_grey_900"
                        android:id="@+id/button_sms" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:background="@color/accent"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:id="@+id/lay_end_trip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akhiri Perjalanan"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
</RelativeLayout>
